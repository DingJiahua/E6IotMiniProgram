/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 20px;
}

.device_list {
  margin-top: 20px;
  height: 100%;
  border-radius: 3px;
  flex: 1;
}

.device_item {
  margin-left: 20px;
  margin-right: 20px;
  margin-bottom: 20px;
  border-radius: 5px;
  border-bottom: 1px solid #aaa;
  padding: 5px;
  background-color: rgb(205, 233, 247);
  color: #333;
}

.device_item_hover {
  background-color: rgba(0, 0, 0, .1);
}